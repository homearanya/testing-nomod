{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "types": ["react", "node"],
    "strict": false,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typings/"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "webpack.config.js"],
  "exclude": ["node_modules", "public", ".cache", "**/*.spec.ts"]
}
